<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".exercise4">


    <TextView android:id="@+id/techView"
        android:max="10" android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Tag Technology" />
    />
    <TextView android:id="@+id/tagIDView"
        android:max="10" android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/techView"
        android:hint="TagId" />
    />
    <TextView android:id="@+id/mimeView"
    android:max="10" android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tagIDView"
    android:hint="MIME/Type" />
    />
    <TextView android:id="@+id/textView"
    android:max="10" android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:layout_below="@+id/mimeView"
    android:hint="Tag content" />
    />
    <Button
        android:id="@+id/converterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:onClick="textToHex"
        android:text="Convert to Hex and ASCII:"
    />

    <TextView android:id="@+id/hexView"
        android:max="10" android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/converterButton"
    />
    <TextView android:id="@+id/asciiView"
    android:max="10" android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:layout_below="@+id/hexView"
    />
</RelativeLayout>
